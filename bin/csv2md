#!/usr/bin/env ruby

require "csv2md"

csv = (STDIN.tty?) ? nil : $stdin.read
gfm = ""

begin
  if csv
    gfm = Csv2md.convert_csv_to_gfm(csv)
  else
    while file_path = ARGV.shift
      csv = File.read(file_path)
      gfm += Csv2md.convert_csv_to_gfm(csv)
      gfm += "\n" if ARGV.length > 0
    end
  end
rescue Csv2md::UnableToParseCsv
  puts "Unable to parse csv"
  exit
end

puts gfm
